{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "oos-logger: compile file",
      "type": "shell",
      "command": ".vscode/scripts/run_sql.sh",
      "args": [
        // "${relativeFile}",
        // "${file}"
        // Escaped double quotes are required to make compatible with Cmder in Windows
        "\"${relativeFile}\"",
        "\"${file}\""
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "options": {},
      "problemMatcher": []
    },
    {
      "label": "oos-logger: build",
      "type": "shell",
      "command": "scripts/build.sh",
      // first argument was the Oracle conneciton string. This has since moved. Leave as blank for now
      // second argument is the file to execute (ie the current file)
      "args": [
        "${input:versionNum}"
      ],
      "group": "build",
      // do not switch to the output pane automatically
      "presentation": {
        "reveal": "always", // always, never, silent
        "panel": "dedicated" // shared, dedicated, new
      },
      "problemMatcher": []
    },
    {
      "label": "oos-logger: install",
      "type": "shell",
      "command": ".vscode/scripts/run_sql.sh",
      "args": [
        // "${relativeFile}",
        // "${file}"
        // Escaped double quotes are required to make compatible with Cmder in Windows
        "\"install/logger_install.sql\"",
        "\"${workspaceFolder}/install/logger_install.sql\""
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "options": {},
      "problemMatcher": []
    },
    {
      "label": "oos-logger: uninstall",
      "type": "shell",
      "command": ".vscode/scripts/run_sql.sh",
      "args": [
        // "${relativeFile}",
        // "${file}"
        // Escaped double quotes are required to make compatible with Cmder in Windows
        "\"install/logger_uninstall.sql\"",
        "\"${workspaceFolder}/install/logger_uninstall.sql\""
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "options": {},
      "problemMatcher": []
    },
    {
      "label": "oos-logger: logger_configure",
      "type": "shell",
      "command": ".vscode/scripts/run_sql.sh",
      "args": [
        // "${relativeFile}",
        // "${file}"
        // Escaped double quotes are required to make compatible with Cmder in Windows
        "\"scripts/logger_configure.sql\"",
        "\"${workspaceFolder}/scripts/logger_configure.sql\""
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "options": {},
      "problemMatcher": []
    }
  ],
  // See https://code.visualstudio.com/docs/editor/variables-reference#_input-variables for more on input variables
  "inputs": [
    {
      "type": "pickString",
      "id": "versionNum",
      "description": "Build Version Num",
      "options": [
        // Update these with list of build versions
        // Can drop older versions as they're released
        "3.2.0",
        "3.3.0"
      ],
      "default": "0.0.0"
    }
  ]
}